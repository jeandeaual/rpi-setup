extends: default

ignore: |
  .git/
  .venv/
  collections/
  roles/

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
  document-start:
    present: false
  document-end:
    present: false
  indentation:
    spaces: 2
    indent-sequences: consistent
  line-length: disable
  truthy:
    ignore: |
      .github/workflows/*
